<mapper namespace="edu.nju.hw.mapper.FinanceMapper">

	<!-- 通过Date查找财务记录 -->
 	<select id="getFinanceByDate" resultType="Finance">
 		select * from finance where date=#{0}
 	</select>
 	
 	<!-- insert一条记录 -->
 	<insert id="insertFinance">
 		insert into finance (roleId,money,date) values(#{0},#{1},#{2})
 	</insert>

</mapper>