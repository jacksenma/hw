		var order=$("<td><button onclick=mustVip('"+vid+"','"+preHid+"','"+preStartDate+"','"+preEndDate+"','"+bed+"','"+price+"','"+preNum+"','"+planStartDate+"','"+planEndDate+"','"+name+"','"+address+"','"+level+"','"+phone+"'"+") class='btn btn-info' >"+"马上预定"+"</button></td>");
		tr.append(pimgtd);
		pimgtd.append(pimg);
